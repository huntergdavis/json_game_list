<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/background"
    android:layout_width="match_parent" android:layout_height="match_parent">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:textStyle="bold"
        android:layout_row="0"
        android:layout_column="0" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logo"
        android:layout_row="1"
        android:layout_column="0"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/youtube"
        android:layout_row="2"
        android:layout_column="0"
        />

    <ImageView
        android:layout_width="32dip"
        android:layout_height="32dip"
        android:id="@+id/websiteIconimageButton"
        android:layout_row="2"
        android:layout_column="2"
        />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/quantity"
        android:layout_row="0"
        android:textSize="@dimen/abc_text_size_small_material"
        android:layout_column="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/duplicate"
        android:layout_row="0"
        android:layout_marginLeft="@dimen/abc_text_size_small_material"
        android:visibility="invisible"
        android:textSize="@dimen/abc_text_size_small_material"
        android:layout_column="2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/revision"
        android:textStyle="italic"
        android:layout_row="3"
        android:layout_column="0" />

    <TextView
        android:layout_columnSpan="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/releaseDate"
        android:textStyle="italic"
        android:layout_row="4"
        android:layout_column="0" />

    <TextView
        android:layout_columnSpan="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/language"
        android:textStyle="italic"
        android:layout_row="4"
        android:layout_column="1" />

    <TextView
        android:layout_columnSpan="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/url"
        android:layout_row="5"
        android:textSize="@dimen/abc_text_size_small_material"
        android:layout_column="0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/condition"
        android:layout_row="3"
        android:textSize="@dimen/abc_text_size_small_material"
        android:layout_column="2" />

    <TextView
        android:layout_columnSpan="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/description"
        android:layout_row="8"
        android:textSize="@dimen/abc_text_size_small_material"
        android:layout_column="0" />

    <TextView
        android:layout_columnSpan="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/systemRequirementsOrInfo"
        android:layout_row="9"
        android:textSize="@dimen/abc_text_size_small_material"
        android:layout_column="0" />

    <TextView
        android:layout_columnSpan="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hoursPlayed"
        android:layout_row="10"
        android:textSize="@dimen/abc_text_size_small_material"
        android:layout_column="0" />

    <TextView
        android:layout_columnSpan="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/statsLink"
        android:layout_row="11"
        android:textSize="@dimen/abc_text_size_small_material"
        android:layout_column="0" />

    <TextView
        android:layout_columnSpan="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/globalStatsLink"
        android:layout_row="12"
        android:textSize="@dimen/abc_text_size_small_material"
        android:layout_column="0" />

</GridLayout>
